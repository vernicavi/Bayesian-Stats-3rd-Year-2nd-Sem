# calculate P(AǀB) given P(A), P(BǀA), P(Bǀnot A)
def bayes_theorem(p_a, p_b_given_a, p_b_given_not_a):
    # calculate P(not A)
    not_a= 1 - p_a
    # calculate P(B)
    p_b = p_b_given_a * p_a + p_b_given_not_a * not_a
    # calculate P(AǀB)
    p_a_given_b = (p_b_given_a * p_a) / p_b
    return p_a_given_b

# P(A)
p_a= 0.0002
# P(BǀA)
p_b_given_a= 0.85
# P(Bǀnot A)
p_b_given_not_a= 0.05
# calculate P(AǀB)
result = bayes_theorem(p_a, p_b_given_a, p_b_given_not_a)
# summarize
print('P(AǀB) = %.3F%%' % (result * 100))

